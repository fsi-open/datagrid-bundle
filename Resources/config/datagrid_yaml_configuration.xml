<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="datagrid.subscriber.configuration.configuration_builder.class">FSi\Bundle\DataGridBundle\DataGrid\Extension\Configuration\EventSubscriber\ConfigurationBuilder</parameter>
        <parameter key="datagrid.subscriber.configuration.configuration_loader.class">FSi\Bundle\DataGridBundle\DataGrid\Extension\Configuration\ConfigurationLoader</parameter>
        <parameter key="datagrid.subscriber.configuration.configuration_importer.class">FSi\Bundle\DataGridBundle\DataGrid\Extension\Configuration\ConfigurationImporter</parameter>
        <parameter key="datagrid.subscriber.configuration.resource_locator.class">FSi\Bundle\DataGridBundle\DataGrid\Extension\Configuration\ResourceLocator</parameter>
    </parameters>

    <services>
        <service id="datagrid.subscriber.configuration.resource_locator" class="%datagrid.subscriber.configuration.resource_locator.class%">
            <argument type="service" id="kernel"/>
            <argument type="string">datagrid</argument>
        </service>
        <service id="datagrid.subscriber.configuration.configuration_importer" class="%datagrid.subscriber.configuration.configuration_importer.class%">
            <argument type="service" id="datagrid.subscriber.configuration.configuration_loader"/>
            <argument type="service" id="datagrid.subscriber.configuration.resource_locator"/>
        </service>
        <service id="datagrid.subscriber.configuration.configuration_loader" class="%datagrid.subscriber.configuration.configuration_loader.class%"/>
        <service id="datagrid.subscriber.configuration.configuration_builder" class="%datagrid.subscriber.configuration.configuration_builder.class%">
            <tag name="datagrid.subscriber" alias="configuration.configuration_builder"/>
            <argument type="service" id="kernel" />
            <argument type="service" id="datagrid.subscriber.configuration.configuration_loader"/>
            <argument type="service" id="datagrid.subscriber.configuration.configuration_importer"/>
            <argument type="service" id="datagrid.subscriber.configuration.resource_locator"/>
        </service>
    </services>
</container>
